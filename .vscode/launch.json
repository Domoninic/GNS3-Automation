    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${fileDirname}",
            "purpose": [
                "debug-in-terminal"
            ]
        },
        {
            "name": "Python: Debug all",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${fileDirname}",
            "purpose": [
                "debug-in-terminal"
            ]
        },
        {
            "name": "Python: configurator.py File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${fileDirname}",
            "purpose": [
                "debug-in-terminal"
            ],
            "args": [
                "./data/interface_vars.yaml",
                "./templates/cisco_interfaces.j2"
            ]
        },
    ]
}